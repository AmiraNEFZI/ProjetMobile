<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD1DC"
    tools:context=".splashactivity">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/greetinggirls" />

    <TextView

       android:id="@+id/acc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="353dp"
        android:gravity="center"
        android:paddingLeft="80dp"
        android:text="@string/welcome_to_your_memoryapp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/acc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="298dp"
        android:gravity="center"
        android:paddingLeft="80dp"
        android:text="Get Started Now and have fun"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lacceuil"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="490dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_bg_pink">

        <TextView
            android:id="@+id/tacceuil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Start Playing"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>

